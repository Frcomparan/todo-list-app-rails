<div class="devise-container">
  <h2>Cambia tu contraseña</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <%= f.label :password, 'Nueva contraseña' %><br />
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caracteres minimos)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: 'Ingresa tu nueva contraseña' %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "Confirma contraseña" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Confirma tu contraseña' %>
    </div>

    <div class="actions">
      <%= f.submit "Change my password" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
