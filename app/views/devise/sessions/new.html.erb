<div class="devise-container">
  <h2>Iniciar Sesión</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, 'Correo' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Ingresa tu correo' %>
    </div>

    <div class="field">
      <%= f.label :password, 'Contraseña' %><br />
      <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Ingresa tu correo' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, 'Recuerdame' %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Iniciar sesión", class: 'primary-btn' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
