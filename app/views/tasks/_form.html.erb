<div class="form-container">
  <%= form_with(model: task, class: 'task-form') do |form| %>
    <% if task.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

        <ul>
          <% task.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <header>
      <div class="field">
        <%= form.text_field :title, required: true, placeholder: 'Titulo de la tarea'  %>
      </div>
      <div class="field">
        <%= form.label :due_date, 'Fecha limite'%>
        <%= form.date_field :due_date, min: Date.today, value: Date.today %>
      </div>
    </header>

    <div class="field task-description">
      <%= form.text_area :description, required: true, placeholder: 'Descripción de la tarea'%>
    </div>

    <%# ¿Usamos select o usamos el calendario...? %>

    <div class="field task-priority">
      <%= form.label :priority, 'Prioridad' %>
      <%= form.select :priority, [["Baja", "low"], ["Media", "medium"], ["Alta", "high"]], {} %>
    </div>

    <div class="actions">
      <%= form.submit 'Guardar' %>
    </div>
  <% end %>
  <%= link_to 'Volver', tasks_path %>
</div>
