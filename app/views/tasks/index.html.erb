<div>
  <p id="notice"><%= notice %></p>

  <h1>Tasks</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Due date</th>
        <th>Owner</th>
        <th>Priority</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.title %></td>
          <td><%= task.description %></td>
          <td><%= task.due_date %></td>
          <td><%= task.owner.email %></td>
          <%# Verificación para imprimir el nivel de prioridad con traducción %>
          <% [["Baja", "low"], ["Media", "medium"], ["Alta", "high"]].each do |priority|%>
            <td><%= priority[0] if priority[1] == task.priority %></td>
          <% end %>
          <td><%= link_to 'Show', task %></td>
          <td><%= link_to 'Edit', edit_task_path(task) %></td>
          <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <br>

  <%= link_to 'New Task', new_task_path %>
</div>