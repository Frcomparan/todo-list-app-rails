<div class="task-index">
  <form action="" class="task-searcher">
    <input type="text" placeholder="Buscar tarea">
    <button type="submit">
      <i class="fa-solid fa-magnifying-glass"></i>
    </button>
  </form>
  <div class="tasks-container">
    <% @tasks.each do |task| %>
        <%= link_to task, class: "task #{'overdue' if task.due_date < Date.today }" do %>
          <div>
            <div class="priority priority-<%= task.priority %>"></div>
            <%= task.title %>
          </div>
          <div class="task-due-date">
            <i class="fa-solid fa-calendar-days"></i>
            <%= task.due_date.strftime('%d/%m') %>
          </div>
        <% end %>
    <% end %>
  </div>
  <div class="link-container">
    <%= link_to '+', new_task_path, class: 'task-new-btn' %>
  </div>
</div>